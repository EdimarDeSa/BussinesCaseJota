{
    "configurations": [
        {
            "name": "Run server",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "localhost:8001"
            ],
            "django": true,
            "autoStartBrowser": false,
            "cwd": "${workspaceFolder}/portal_jota",
            "program": "manage.py",
            "preLaunchTask": "docker-compose up",
            "postDebugTask": "docker-compose down"
        },
        {
            "name": "Run django tests",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "test"
            ],
            "django": true,
            "autoStartBrowser": false,
            "cwd": "${workspaceFolder}/portal_jota",
            "program": "manage.py",
            "preLaunchTask": "docker-compose up",
            "postDebugTask": "docker-compose down"
        }
    ]
}